//  - nib folder is located in static/css/
@import 'nib';

//  - load webfonts from Google
@import url('//fonts.googleapis.com/css?family=Open+Sans:300,400,600|Montserrat:400,700|Roboto+Slab');

//  - font style
.open-sans
  font-family 'Open Sans', sans-serif
.montserrat
  font-family 'Montserrat', sans-serif
.roboto-slab
  font-family 'Roboto Slab', serif


//  - colors and other vars
_black = #000
_white = #fff
_green = #29b473
_yellowH = #fdc14f
_orangeH = #f67036
_greenH = #32b650
_azureH = #79d8d9

_padding = 50px


//  - reset purecss fonts
.pure-g [class *='pure-u'],
.pure-g-r [class*="pure-u"]
  @extends .open-sans
.pure-form
  input[type='text'], input[type='password'], input[type='email'], input[type='url'], input[type='date'], input[type='month'], input[type='time'], input[type='datetime'], input[type='datetime-local'], input[type='week'], input[type='number'], input[type='search'], input[type='tel'], input[type='color'], select, textarea
    @extends .open-sans
  button
    @extends .open-sans
button
  @extends .open-sans


//  - some useful classes
.tl
  text-align left
.tc
  text-align center
.tr
  text-align right
for _val in (1..15)
  .spacer-{_val * 10}
    height (_val * 10px)
.pl
  padding-left _padding
.pr
  padding-right _padding

.smooth-scroll
  cursor pointer

img.turro
  width 184px
  max-width 100%
  height auto
  display block

h1,
h2,
h3,
h4,
h5,
h6
  @extends .montserrat
  margin 0
  line-height 100%


.green-box
  background rgba(_green, 0.5)
  width 500px
  margin 0 0 0 250px
  padding 20px 30px
  h1,
  p
    margin 0
  h1
    margin-bottom 10px
  p
    @extends .montserrat
    font-size 18px
    margin-bottom 10px
    &:last-child
      margin-bottom 5px
    span.smooth-scroll
      cursor pointer
      border-bottom 3px solid rgba(#fff, 0.4)
      


//  - main style
html,
body
  height 100%
  @extends .open-sans

body
  background url('../img/picts/sod_.jpg') center no-repeat fixed
  background-size cover
  font-weight 400
  color _white
  -webkit-font-smoothing antialiased
  -webkit-overflow-scrolling touch

  .gradient
    position fixed
    z-index 1
    width 100%
    height 100%
    background rgba(_black, 0.55)
    transition background 0.5s ease
    &.with-text
      background rgba(_black, 0.80)

  .container
    position relative
    z-index 2
    width 1280px
    margin auto

  .transition
    transition opacity 2s ease
  .transition2
    transition opacity 2s ease 0.5s

  .fadeIn
    opacity 0
    &.show
      opacity 1

  .share-container
    & > p
      display inline-block
      vertical-align middle
      font-weight 600
      text-transform uppercase
      margin 0 20px 0 0
    .addthis_sharing_toolbox
      display inline-block
      vertical-align middle
      width 220px

  #top-mobile
    display none

  #menu
    position fixed
    top auto
    left auto
    z-index 15
    ul
      margin 0 0 0 50px
      padding 0
      li
        list-style-type none
        cursor pointer
        position relative
        display inline-block
        margin-right 10px
        span
          transition background 0.5s ease
          background rgba(#999, 0.9)
          padding 10px
          font-size 16px
          display inline-block
          @extends .montserrat
          text-transform uppercase
        &:hover,
        &.active
          span
            background rgba(_green, 0.9)
        a
          color #fff
          text-decoration none

  #main
    position relative
    z-index 4
    h5
      &#hashtags
        font-weight 300
        @extends .montserrat
        margin-bottom 50px
        .twitter-icon
          font-size 24px
          display inline-block
          margin-right 10px
          font-weight normal
        a
          color _white
          text-decoration none
          transition color 0.5s
        span
          display inline-block
          font-size 18px
          line-height 28px
          margin-right 10px
          &:hover
            a
              color lighten(_green, 40%)
    img
      &#logo
        width (625px / 1.5)
        //-height (106px / 1.5)
        height auto
        border-bottom 2px solid rgba(_white, 0.20)
        padding-bottom 20px
        margin-bottom 20px
    h2
      text-transform uppercase
      font-weight 700
      font-size 32px
    p
      &.when,
      &.location
        @extends .montserrat
        font-weight 400
        font-size 15px
        span
          &.uppercase
            text-transform uppercase
        small
          font-weight 400
          border-bottom 2px solid rgba(_white, 0.40)

    .abstract
      //-width 340px
      //-max-width 100%
      font-size 20px

  .partners
    clearfix()
    h5
      font-weight 400
      margin-bottom 20px
      opacity 0.5
      span
        border-bottom 2px solid rgba(_white, 0.20)
    .box
      float left
      &:first-child
        margin-right 20px
    img
      &.partner
        width auto
        height (156px / 2.5)
        margin-right 30px
      &.partner-bigger
        width auto
        height (156px / 1.75)!important
    small
      display block
      margin 0
      font-size 11px
      opacity 0.75
      b
        font-weight 600
      &.fix
        margin-top -25px

  .f-partners
    clearfix
    img
      cursor pointer
    .text
      display none
  
  .clicked-text
    font-size 12px
    display none
    max-width 400px
    ul
      margin 0
      padding 0
      list-style-type none
      li
        margin 0
        padding 0
        margin-bottom 5px
    .pl
      padding-left 10px
    .pr
      padding-right 10px
    a
      color _white
      text-decoration none
      border-bottom 2px solid rgba(_white, 0.5)


  #programma,
  #relatori,
  #iscriviti,
  #letture,
  #location,
  #press
    h1
      @extends .montserrat
      margin-bottom 30px
      span
        border-bottom 3px solid rgba(_white, 0.5)
        padding-bottom 2px

  #programma
    #agenda
      .row
        .circle
          display inline-block
          _cWH = 120px
          height _cWH
          width _cWH
          border-radius (_cWH / 2)
          overflow hidden
          position relative
          span
            color _white
            @extends .montserrat
            font-weight 400
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            width 100%
            font-size 16px
            text-align center
          &.circle-yellow
            background _yellowH
          &.circle-orange
            background _orangeH
          &.circle-green
            background _greenH
          &.circle-azure
            background _azureH
        .border
          border-right 3px dotted rgba(_white, 0)
          margin-right 20px
          &.border-yellow
            border-color _yellowH
          &.border-orange
            border-color _orangeH
          &.border-green
            border-color _greenH
          &.border-azure
            border-color _azureH
        .valign
          position relative
            /*
          .text
            position absolute
            top 50%
            left 0
            transform translate(0px, -50%)
            */
        .text
          &:first-child
            .padding
              padding-right 20px
          h2,
          h3,
          h4,
          p,
          ul
            margin 0
            padding 0
          h4,
          h3
            font-weight 300
          h2
            margin 10px 0
          h3
            margin-bottom 10px
          h2,
          h3,
          h4
            a
              color _white
              transition color 0.5s ease, border-color 0.5s ease
              text-decoration none
              border-bottom 1px dotted _white
              &:hover
                color _green
                border-color _green
          p,
          ul li
            font-size 15px
            line-height 20px
          ul
            margin-bottom 10px
            li
              list-style-type none
              margin 2px 0
              i
                font-style normal
                font-weight 600
                display inline-block
                margin-right 5px
                border-bottom 2px solid rgba(_white, 0.5)
              span
                @extends .roboto-slab

  #relatori
    p.montserrat
      text-align center
    #speakers
      .single-speaker
        _picSize = 90px
        span.pic
          width _picSize
          height _picSize
          border-radius ((_picSize + 3) / 2)
          overflow hidden
          margin 0 10px 10px 0
          cursor pointer
          border 3px solid rgba(_white, 0.75)
          transition border-color
          img
            transition opacity 0.2s ease
            opacity 0.5
            width 100%
            height auto
            border-radius 50%
          &.active
            border-color _green
            img
              opacity 1
        h2
          transition color
          &.active
            color _green
        h2,
        span.pic
          display inline-block
          vertical-align middle
          cursor pointer
        .text
          display none
          font-size 14px
          color _white
          @extends .roboto-slab
          line-height 24px
          a
            color _white
            border-bottom 2px solid rgba(_white, 0.5)
            text-decoration none
        &:hover
          span.pic
            border-color _green
            img
              opacity 1
          h2
            color _green

  #letture,
  #press
    ul
      margin 0
      padding 0
      li
        margin 0 0 10px 20px
        font-size 14px
        line-height 24px
        a
          color _white
          text-decoration none
          border-bottom 2px solid rgba(_white, 0.5)
          transition color 0.5s ease, border-color 0.5s ease
          @extends .roboto-slab
          font-size 18px
          &:hover
            color _green
            border-color _green

  #iscriviti
    .deleted
      text-decoration line-through
    .bigger
      font-size 120%
      line-height 120%
    p
      code
        display block
        margin 20px auto
        border-left 5px solid rgba(_white, 0.8)
        padding 5px 0 5px 20px
        word-break break-all
        font-family monospace
        font-size 16px
        line-height 16px
      b,
      strong
        font-weight 600
        border-bottom 2px solid rgba(_white, 0.5)
    #subscribe-form,
    #stay-update
      small
        display block
        margin-bottom 20px
      input,
      textarea
        border 3px solid #aaa
        box-shadow none
        margin-bottom 10px
        transition border-color 0.5s ease
        &:focus
          border-color _green
      input[type="text"],
      input[type="email"]
        width 50%
      textarea
        width 70%
        height 100px
        resize vertical
      label
        font-size 14px
        line-height 14px
      button
        margin-top 20px
        background _green
        border-radius 4px
        i,
        span
          display inline-block
          vertical-align middle
        span
          margin-left 5px
          @extends .montserrat
          text-transform uppercase
    #stay-update
      input.email-input,
      button
        display inline-block
      input.email-input
        width 275px
        margin-right 20px
      button
        border 3px solid _green
        text-transform uppercase
        @extends .montserrat

  #location
    h3
      border-bottom 2px solid rgba(_white, 0.20)
      display inline-block
    p,
    li
      font-size 90%
    ul
      margin 0
      padding 0
      li
        margin-left 20px
    a
      @extends .montserrat
      color _white
    .g-map-infos-text
      overflow auto
      color #333!important
      width 200px
      height 60px
      h4
        text-transform uppercase
        margin-bottom 5px
      p
        margin 0

  .subscribe-btn-green
    box-sizing border-box
    position relative
    box-shadow inset 0 1px 0 rgba(_white,0.5), 0 2px 2px rgba(_black,0.2), 0 0 4px 1px rgba(_black,0.1)
    display block
    width 315px
    background _green
    border none
    box-shadow none
    border-radius 50px
    overflow hidden
    @extends .montserrat
    text-transform uppercase
    padding 15px 0
    margin 0
    cursor pointer
    transition 0.5s ease background
    &:hover
      background _greenH

  a.subscribe-btn-green
    color _white
    text-decoration none
        

.survey
  @extends .montserrat
  background rgba(_green, 0.3)
  padding 20px
  margin-left -20px
  max-width 340px
  text-align center
  //border 2px solid rgba(_white, 0.6)
  a
    text-decoration none
    border-bottom 1px solid rgba(_white, 0)
    transition all 0.5s ease
    color _white
    font-size 15px
    line-height 24px
    &:hover
      border-color rgba(_white, 0.7)
  span
    font-size 18px
    line-height 28px

//  - for media queries see http://purecss.io/grids/ @ Default Media Queries

@media screen and (max-width: 1300px)
  body
    .container
      width 960px
  .green-box
    margin-left 150px

@media screen and (max-width: 48em)
  _padding = 10px
  .pl
    padding-left _padding
  .pr
    padding-right _padding

  body
    
    #main
      p.location
        text-align center
        img.turro
          display inline
          margin-bottom 10px
    
    #top-mobile
      display block
      position fixed
      z-index 100
      width 100%
      background _white
      transition top 0.5s ease
      overflow hidden
      height 35px
      top -35px
      &.show
        top 0px
      ul
        margin 0
        padding 0
        li
          text-align center
          color _black
          cursor pointer
          span
            padding 5px 10px
            display block
            @extends .montserrat
            text-transform uppercase
    
    #menu
      position relative!important
      top 0px
      left 0px
      z-index 10
      width 100%
      text-align center
      ul
        margin 0
        li
          margin 5px 1% 0 1%
          display inline-block
          width 48%
          span
            display block

    .share-container
      width 100%!important
      margin 0 auto 50px auto
      p
        @extends .montserrat

    .container
      width auto
      max-width 100%
      & > .spacer-60
        height 20px
      & > .spacer-50
        display none

    header
      position relative
      .spacer-100
        height 0px

    #main
      text-align center
      .abstract
        margin auto
      .spacer-100,
      .spacer-60
        height 30px
      h5
        &#hashtags
          text-align center
          margin-bottom 10px
          span
            line-height 20px
            margin-right 5px
            font-size 16px
            &:last-child
              margin-right 0
            transition color 0.5s
            &:hover
              color _green
      img
        &#logo
          max-width 100%!important
          height auto!important
      .subscribe
        text-align center
        clearfix()
        margin 0 auto
        .subscribe-btn
          width 100%
          display block
          margin 0 auto

    .partners
      .box
        text-align center
        margin-right 0px!important
        float none
        &:first-child
          margin-bottom 10px!important
      small
        text-align center
      img
        &.partner
          margin 0

    #programma,
    #relatori,
    #iscriviti
      h1
        text-align center

    #relatori
      #speakers
        .single-speaker
          text-align center
          margin-bottom 20px
          span.pic
            display block
            margin 0 auto 10px auto
          h2
            font-size 1em
            display block
          .text
            text-align left

    #programma
      #agenda
        .row
          .border
            border-right 0px!important
            border-bottom 5px dotted rgba(_white, 0)
            margin-right 0px!important
            margin-bottom 20px
            padding-bottom 5px
            &.border-yellow
              border-color rgba(_yellowH, 0.75)
            &.border-orange
              border-color rgba(_orangeH, 0.75)
            &.border-green
              border-color rgba(_greenH, 0.75)
            &.border-azure
              border-color rgba(_azureH, 0.75)
          .valign
            .text
              position relative
              top auto
              left auto
              transform none
              text-align center

    #iscriviti
      #subscribe-form
        input[type="text"],
        input[type="email"],
        textarea,
        button
          width 100%
  
  .survey
    max-width 100%
    margin 0

  .hide-mobile
    display none
    
  #stay-update
    input.email-input,
    button
      display block!important
      width 100%!important
      margin 0 0 10px 0
  #iscriviti
    text-align center
    p.bigger
      margin-bottom 20px!important
      
  .green-box
    width 80%
    margin 0
    padding 5% 10%

