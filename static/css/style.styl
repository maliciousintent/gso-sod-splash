//  - nib folder is located in static/css/
@import('nib');

//  - load webfonts from Google
@import url('//fonts.googleapis.com/css?family=Open+Sans:300,400,600');
@import url('//fonts.googleapis.com/css?family=Montserrat:400,700');

//  - font style
.open-sans
  font-family 'Open Sans', sans-serif
.montserrat
  font-family 'Montserrat', sans-serif


//  - colors and other vars
_black = #000
_white = #fff
_green = #29b473
_padding = 40px

//  - reset purecss fonts
.pure-g [class *='pure-u'],
.pure-g-r [class*="pure-u"]
  @extends .open-sans
.pure-form
  input[type='text'], input[type='password'], input[type='email'], input[type='url'], input[type='date'], input[type='month'], input[type='time'], input[type='datetime'], input[type='datetime-local'], input[type='week'], input[type='number'], input[type='search'], input[type='tel'], input[type='color'], select, textarea
    @extends .open-sans
  button
    @extends .open-sans
button
  @extends .open-sans


//  - some useful classes
.tl
  text-align left
.tc
  text-align center
.tr
  text-align right
for _val in (1..15)
  .spacer-{_val * 10}
    height (_val * 10px)
.pl
  padding-left _padding
.pr
  padding-right _padding


h1,
h2,
h3,
h4,
h5,
h6
  @extends .montserrat
  margin 0
  line-height 100%


//  - main style
html,
body
  height 100%
  @extends .open-sans

body
  background url('../img/picts/sod__.jpg') center no-repeat fixed
  background-size cover
  font-weight 400
  color _white
  -webkit-font-smoothing antialiased
  -webkit-overflow-scrolling touch
  &.old
    background url('../img/picts/sod_.jpg') center no-repeat fixed
    background-size cover

  .gradient
    position fixed
    z-index 1
    width 100%
    height 100%
    background rgba(_black, 0.45)

  .container
    position relative
    z-index 2
    width 1280px
    margin auto

  .transition
    transition opacity 2s ease
  .transition2
    transition opacity 2s ease 0.5s

  .fadeIn
    opacity 0
    &.show
      opacity 1

  #main
    position relative
    z-index 4
    h5
      &#hashtags
        font-weight 300
        @extends .montserrat
        margin-bottom 50px
        span
          display inline-block
          font-size 18px
          line-height 28px
          margin-right 10px
          transition color 0.5s
          &:hover
            color lighten(_green, 40%)
    img
      &#logo
        width (625px / 2)
        height (106px / 2)
        border-bottom 2px solid rgba(_white, 0.20)
        padding-bottom 20px
        margin-bottom 20px
    h2
      text-transform uppercase
      font-weight 700
      font-size 32px
    .subscribe
      clearfix()
    p
      &.when
        @extends .montserrat
        font-weight 700
        span
          &.uppercase
            text-transform uppercase
        small
          font-weight 400

    .abstract
      width 340px
      max-width 100%

  footer,
  .partners-fix
    clearfix()
    h5
      font-weight 400
      margin-bottom 20px
      opacity 0.5
      span
        border-bottom 2px solid rgba(_white, 0.20)
    .partners-container
      clearfix()
      .partners
        display inline-block
        vertical-align top
        img
          &.partner
            width auto
            height (156px / 2.5)
            margin-right 30px
        &.panda
          float right
          img
            margin-right 0px
            width auto
            height 15px
            opacity 0.1
    small
      display block
      margin 10px 0
      font-size 12px
      opacity 0.7

  .partners-fix
    width 400
    margin auto
    .partners
      img
        vertical-align middle!important
        display inline-block!important
        height (156px / 2)!important
        &.partner.no-margin
          margin-right 0
        &.partner-bigger
          width auto
          height (156px / 1.5)!important


//  - for media queries see http://purecss.io/grids/ @ Default Media Queries

@media screen and (max-width: 1300px)
  body
    .container
      width 960px

@media screen and (max-width: 48em)
  _padding = 10px
  .pl
    padding-left _padding
  .pr
    padding-right _padding
  body
    .container
      width auto
      max-width 100%
      & > .spacer-60
        height 20px
    header
      position relative
      .spacer-100
        height 0px
    #main
      text-align center
      .abstract
        margin auto
      .spacer-100,
      .spacer-60
        height 30px
      h5
        &#hashtags
          text-align center
          margin-bottom 10px
          span
            line-height 20px
            margin-right 5px
            font-size 16px
            &:last-child
              margin-right 0
            transition color 0.5s
            &:hover
              color _green
      img
        &#logo
          max-width 100%!important
          height auto!important
      .subscribe
        text-align center
        .subscribe-btn
          width 100%
          display block
          margin 0 auto
    footer,
    .partners-fix
      .partners-container
        text-align center!important
        .partners
          margin-bottom 20px
          display block
          .tl,
          .tr
            text-align center
            img
              margin 0
          &.panda
            float none
            img
              opacity 0.2
              height 15px

    .partners-fix
      .partners
        .tr
          text-align center!important
        img
          display block!important
          margin 0 auto!important
          &:last-child
            margin-bottom 20px!important


//  - import other styles
@import('clock')
@import('form')